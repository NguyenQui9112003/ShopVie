<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/cart.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <title>Shopping Cart</title>
  <style>
    .move-left {
      position: relative;
      left: -55px;
    }

    #cartTable th {
      text-align: center;
    }

    .pro-content {
      position: relative;
      right: -15px;
    }
  </style>
</head>

<body>
  <div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/user" style="font-size: 2em;"><i class="fa-solid fa-house"
            style="font-size: 1em;"></i>
          ShopVie
        </a>
      </div>
    </nav>
    <div class="small-container cart-page">
      <table class="table-bordered " id="cartTable">
        <tr>
          <th scope="col">Products</th>
          <th scope="col">Quantity</th>
          <th scope="col">Subtotal</th>
        </tr>
        <% if(products.length> 0) { %>
          <% products.forEach(product=> { %>
            <tr style="text-align: center">
              <td>
                <div class="cart-info">
                  <div class="card"><img src="<%= product.img %>"></div>
                  <div>
                    <p class="pro-content">
                      <%= product.content %>
                    </p>
                    <p class="price">Price: <%= product.price %>.000 VND</p>
                  </div>
                </div>
              </td>
              <td><input type="number" value="1" min="1" max="99" style="width: 50px; height:50px" id="productNum"></td>
              <td style="text-align: center">
                <span>
                  <%= product.price %>.000 VND
                </span>
                <form action="/user/removecart" method="post">
                  <button type="submit" class="removeBtn mt-1" name="content"
                    value="<%= product.content %>">Remove</button>
                </form>
              </td>
            </tr>
            <% }) %>
              <% } %>
      </table>
      <div class="total-price col-2 offset-10 pt-3 move-left" id="totalPriceDiv">
        <button type="button" class="btn btn-info">Buy now</button>
      </div>
    </div>
  </div>
  </div>
</body>

</html>