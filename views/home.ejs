<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <title>Home page</title>
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><i class="fa-solid fa-house"></i>
                    ShopVie
                </a>
                <div class="d-flex justify-content-end collapse navbar-collapse">
                    <form action="/user/search" method="post" class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" name="search">
                            &nbsp;
                        <button class="btn btn-outline-info" type="submit">Search</button>
                    </form>
                    <div class="dropdown custom-dropdown pl-3">
                        <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-gear"></i>
                        </button>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/user/information"><i class="fa-solid fa-user"></i></a></li>
                          <li><a class="dropdown-item" href="/user/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
                          <li><a class="dropdown-item" href="#"><i class="fa-solid fa-right-to-bracket"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <div class="gallery" id="product">
            <% if(products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="content">
                        <img src="<%= product.img %>" alt="">
                        <h3><%= product.name %></h3>
                        <p><%= product.content %></p>
                        <h5><%= product.price %>.000 VND</h5>
                        <ul>
                            <% for(let i = 0; i < product.star; i++) { %>
                                <li><i class="fa-solid fa-star checked"></i></li>
                            <% } %>
                            <% for(let i = 0; i < 5 - product.star; i++) { %>
                                <li><i class="fa-regular fa-star"></i></li>
                            <% } %>
                            <li><%= product.review %> (reviews)</li>
                        </ul>
                        <form action="/user/addtocart" method="post">
                            <button type="submit" class="btn btn-info " name="cart" value="<%= product.content %>">Add to cart</button>
                        </form>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <footer>
            <div class="wrapper-footer">
                <div class="footer-content">
                    <h3>Contact Us</h3>
                    <p>Email: nhpqui21@clc.fitus.edu.vn</p>
                    <p>Phone: 0787820631</p>
                    <p>Address: 135B Tran Hung Dao</p>
                </div>
                <div class="footer-content" style="text-align: start;">
                    <h3>About Us</h3>
                    <ul class="list">
                        <li><a href="">Home</a></li>
                        <li><a href="">About</a></li>
                        <li><a href="">Services</a></li>
                        <li><a href="">Contact</a></li>
                        
                    </ul>
                </div>
                <div class="footer-content" style="margin-top: 0px;">
                    <h3>Follow Us</h3>
                    <ul class="social-icons">
                        <li><a href=""><i class="fa-brands fa-facebook"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-twitter"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-instagram"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="bottom-bar">
                <p>&copy; 2023 My company. All rights reserved</p>
            </div>
        </footer>
    </div>
</body>
</html>